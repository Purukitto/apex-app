# Supabase Configuration
# Get these values from your Supabase project settings (Settings > API)

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Firebase Configuration (REQUIRED for push notifications)
# ⚠️ IMPORTANT: You must create your own Firebase project - placeholder values won't work!
# Get these from Firebase Console > Project Settings > General > Your apps
# 1. Create a Firebase project at https://console.firebase.google.com/
# 2. Add a Web app and Android app to your project
# 3. Copy the config values below
# 4. For Android: Download google-services.json and place it at android/app/google-services.json
#    OR set VITE_FIREBASE_ANDROID_API_KEY and VITE_FIREBASE_ANDROID_APP_ID below

# Web App Configuration
VITE_FIREBASE_API_KEY=your-web-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-web-app-id
VITE_FIREBASE_VAPID_KEY=your-web-vapid-key

# Android App Configuration (OPTIONAL - if not set, will use values from google-services.json)
# These are DIFFERENT from the web app values - get them from your Android app config in Firebase Console
VITE_FIREBASE_ANDROID_API_KEY=your-android-firebase-api-key
VITE_FIREBASE_ANDROID_APP_ID=your-android-app-id

# Discord RPC Configuration (Android only)
VITE_DISCORD_RPC_ENABLED=true
VITE_DISCORD_RPC_APP_ID=your-discord-application-id

# Website based redirect URLs (OPTIONAL)
# These are used to redirect users to the correct page after signing up or resetting their password
# Override the redirect URLs. If not set, uses current origin + /reset-password
# VITE_WEBSITE_BASE_URL=https://apex.purukitto.xyz