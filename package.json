{
  "name": "apex-app",
  "author": {
    "name": "Purukitto",
    "url": "https://github.com/Purukitto"
  },
  "license": "GNU GPL-3.0",
  "homepage": "https://github.com/Purukitto/apex-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/Purukitto/apex-app.git"
  },
  "bugs": {
    "url": "https://github.com/Purukitto/apex-app/issues"
  },
  "version": "0.15.2",
  "type": "module",
  "scripts": {
    "predev": "node scripts/inject-firebase-sw.js && node scripts/inject-google-services.js",
    "dev": "vite --host",
    "prebuild": "node scripts/inject-firebase-sw.js && node scripts/inject-google-services.js",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "dev:android": "npx cap run android --live-reload --host=192.168.1.9 --port=5173",
    "assets:android": "npx capacitor-assets generate --android --iconBackgroundColor '#0A0A0A' --splashBackgroundColor '#0A0A0A'",
    "log:android": "adb logcat -c; adb logcat | Select-String -Pattern \"Motion|lean|accel|Capacitor|Console\" -CaseSensitive:$false",
    "log:android:motion": "adb logcat -c; adb logcat chromium:V Capacitor:V Console:V *:E | Select-String -Pattern \"Motion|lean|accel|DeviceMotion|sensor\" -CaseSensitive:$false",
    "preview": "vite preview",
    "prepare": "husky",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "release:first-release": "standard-version --first-release"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/app": "^8.0.0",
    "@capacitor/browser": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/filesystem": "^8.0.0",
    "@capacitor/geolocation": "^8.0.0",
    "@capacitor/haptics": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@capacitor/keyboard": "^8.0.0",
    "@capacitor/local-notifications": "^8.0.0",
    "@capacitor/motion": "^8.0.0",
    "@capacitor/preferences": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0",
    "@capacitor/share": "^8.0.0",
    "@capacitor/status-bar": "^8.0.0",
    "@danyalwe/capacitor-sensors": "^1.0.1",
    "@supabase/supabase-js": "^2.90.1",
    "@tanstack/react-query": "^5.90.16",
    "@types/leaflet": "^1.9.21",
    "date-fns": "^4.1.0",
    "firebase": "^12.8.0",
    "framer-motion": "^12.26.1",
    "html2canvas": "^1.4.1",
    "leaflet": "^1.9.4",
    "loglevel": "^1.9.2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-leaflet": "^5.0.0",
    "react-qr-code": "^2.0.18",
    "react-router-dom": "^7.12.0",
    "sonner": "^2.0.7",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.7",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  }
}
